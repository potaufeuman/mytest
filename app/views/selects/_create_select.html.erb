<aside class = "col-md-4">
  <section = "user_info">
    <%= gravatar_for user, size: 50 %>
    <%= user.name %>
  </section>
  <div class = "menu">
    <%= form_for select, url: test_question_selects_path(test, question) do |f| %>
      <li>カテゴリ：<%= test.subject %></li>
      <li>タイトル：<%= test.title %></li>
      <h5>問題：</h5>
      <!--= question.Q %>-->
      <div>
        <%= f.label :選択肢 %>
        <div class="radio_btn"><%= f.radio_button :judge, :"0" %></div>
        <div class="quiz"><%= f.text_area :content %></div>
      </div>
      <%= f.submit "Create Select", class: "btn btn-primary" %>
    <% end %>
  </div>
</aside>