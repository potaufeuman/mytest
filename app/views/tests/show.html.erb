<% provide(:title, 'Test Content') %>
<h1><%= yield(:title) %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@test, locale: true) do |f| %>
      <h3>カテゴリ：<%= @test.subject %></h3>
      <h3>タイトル：<%= @test.title %></h3>
      <% @test.questions.each_with_index do |question, i| %>
        <h3>問題（<%= i+1 %>）</h3>
        <h3><%= question.Q %></h3>
        <%= f.fields_for :answers do |answers_form| %>
          <%= answers_form.label :選択肢 %>
          <div class="radio_btn"><%= answers_form.radio_button :judge, :'1.' %></div>
          <div class="quiz"><%= answers_form.text_area :content %></div>
        <% end %>
      <% end %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>