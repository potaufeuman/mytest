<li id="micropost-<%= test.id %>">
  <span class="content">分野：<%= test.subject %></span>
  <span class="content">
    タイトル：<%= link_to test, target: :_blank do %><%= test.title %><% end %>
    <br>
    <% if current_user?(test.user) %>
      <%= link_to new_test_question_path(test.id), target: :_blank do %>
        question
      <% end %>
      <%= link_to "edit", edit_test_path(test.id) %>
      <%= link_to "delete", test, method: :delete,
                                  data: { confirm: "You sure?"} %>
    <% end %>
  </span>
  <span class="timestamp">
    Create Test <%= time_ago_in_words(test.created_at) %> ago.
  </span>
</li>