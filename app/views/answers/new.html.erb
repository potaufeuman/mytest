<% provide(:title, 'Take a test') %>
<h1><%= yield(:title) %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="quiz">
      <%= form_with(model: @test, url: test_question_answers_path(@test, @question), method: :post) do |f| %>
            <div class="radio_btn">
              <li>問題（<%= @question_num %>）</li>
              <div class="quiz"><%= @question.Q %></div>
              <div class="quiz">選択肢</div>
              <% @question.selects.each_with_index do |select, ia| %>
                <%= f.fields_for :answers do |f_answer| %>
                  <div class="radio_btn">
                    <%= f_answer.check_box :select_A %>
                    <%= f_answer.label :select_A, select.content, {value: select.id, style: "display: inline-block;"} %>
                  </div>
                <% end %>
              <% end %>
            </div>
      <%= f.submit "Next", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>