<% require "pry" %>
<% provide(:title, 'Take a test') %>
<h1><%= yield(:title) %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="quiz">
      <!--= form_tag post_answerring_test_question_path(@test, @question), method: :post do %>-->
      <%= form_for(@question, url: post_answerring_test_question_path(@test.id, @question.id), method: :post) do |f| %>
        <div class="radio_btn">
          <li>問題（<%= @question_num %>）</li>
          <div class="quiz"><%= @question.Q %></div>
          <div class="quiz">選択肢</div>
          <% for i in 0..@ia do %>
            <%= fields_for @answers[i] do |f_answer| %>
              <%= f_answer.hidden_field :tested_id, :value => @user.id %>
              <%= f_answer.hidden_field :select_id, :value => @selects[i].id %>
              <p><%= "(#{ i+1 })" %></p>
              <%= f_answer.radio_button :select_A, 1 %>
              <%= f_answer.label :select_A, @selects[i].content,
                  {value: @selects[i].id, style: "display: inline-block;"} %>
            <% end %>
          <% end %>
        </div>
      <%= f.submit "Next", class: "btn btn-primary" %>
      <!--= submit_tag "Next", class: "btn btn-primary" %>-->
      <% end %>
    </div>
  </div>
</div>